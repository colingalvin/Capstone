@model Capstone.ViewModels.CreateNewRuleSetViewModel

@{
    ViewData["Title"] = "CreateRuleSeet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateRuleSet</h1>

<h4>RuleSet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRuleSet">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="RuleSetId" />

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Default" /> @Html.DisplayNameFor(model => model.Default)
                </label>
            </div>
            <div class="form-check">
                <label for="Days" class="control-label"></label>
                @foreach (var day in DaysOfWeek.Days)
                {
                    <br />
                    <input name="Days" type="checkbox" value="@day.Value" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        @day.Text
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
