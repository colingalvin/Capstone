@model Capstone.Models.Piano

@{
    ViewData["Title"] = "EditPiano";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditPiano</h1>

<h4>Piano</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPiano">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PianoId" />
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="RemindForService" />
            <input type="hidden" asp-for="Reminded" />
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Configuration" class="control-label"></label>
                <input asp-for="Configuration" class="form-control" />
                <span asp-validation-for="Configuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastService" class="control-label"></label>
                <input asp-for="LastService" class="form-control" />
                <span asp-validation-for="LastService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnicianNotes" class="control-label"></label>
                <input asp-for="TechnicianNotes" class="form-control" />
                <span asp-validation-for="TechnicianNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Admin Home</a>
</div>

